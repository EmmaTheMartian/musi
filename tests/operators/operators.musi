let test = fn condition_name, condition, expected do
	if condition == expected do
		print(condition_name)
		println(': pass')
	end else do
		print(condition_name)
		print(': fail (expected ')
		print(expected)
		print(', got ')
		print(condition)
		println(')')
	end
end

test('==', 1 == 1, true)
test('!=', 1 != 2, true)
test('>= (>)', 2 >= 1, true)
test('>= (==)', 2 >= 2, true)
test('<= (<)', 1 <= 2, true)
test('<= (==)', 2 <= 2, true)
test('<', 1 < 2, true)
test('>', 2 > 1, true)
test('&& (tt)', true && true, true)
test('&& (tf)', true && false, false)
test('&& (ff)', false && false, false)
test('|| (tt)', true || true, true)
test('|| (tf)', true || false, true)
test('|| (ff)', false || false, false)

test('+', 1 + 2, 3)
test('-', 3 - 2, 1)
test('/', 3 / 2, 1.5)
test('*', 3 * 2, 6)
test('%', 4 % 2, 0)

test('! (t)', !true, false)
test('! (f)', !false, true)

test('*/', 5 * 10 / 25, 2)
test('-*', 20 - 10 * 2, 0)
test('*-', 2 * 10 - 15, 5)
