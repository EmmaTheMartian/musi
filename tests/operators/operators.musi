let test = fn condition_name condition do
	if condition do
		print(condition_name)
		println(': pass')
	end else do
		print(condition_name)
		println(': fail')
	end
end

let test_invert = fn condition_name condition do
	test(condition_name !condition)
end

test('==' 1 == 1)
test('!=' 1 != 2)
test('>= (>)' 2 >= 1)
test('>= (==)' 2 >= 2)
test('<= (<)' 1 <= 2)
test('<= (==)' 2 <= 2)
test('<' 1 < 2)
test('>' 2 > 1)
test('&& (tt)' true && true)
test_invert('&& (tf)' true && false)
test_invert('&& (ff)' false && false)
test('|| (tt)' true || true)
test('|| (tf)' true || false)
test_invert('|| (ff)' false || false)

test('+' 1 + 2 == 3)
test('-' 3 - 2 == 1)
test('/' 3 / 2 == 1.5)
test('*' 3 * 2 == 6)
test('%' 4 % 2 == 0)

test_invert('! (t)' !true)
test('! (f)' !false)
